<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets
	xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>Progress bar</Title>
			<Author>William Robinson</Author>
			<Description>Provide up-to-date feedback on the progress of a workflow or action with simple yet flexible progress bars.</Description>
			<Shortcut>bs-progress-bar</Shortcut>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
				<Literal>
					<ID>progress</ID>
					<ToolTip>The percentage of progress</ToolTip>
					<Default>50%</Default>
				</Literal>
			</Declarations>
			<Code Language="HTML">
				<![CDATA[<div class="progress">
  <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">$progress$</div>
</div>$end$]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>